<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Document</title>
  </head>
  <body>
    <header>
      <div class="container flex justify-between align-center">
        <h1>Books Details</h1>
        <nav>
          <a href="/books">Back to list</a>
        </nav>
      </div>
    </header>
    <section class="container">
      <div>
        <h3 class="title"><%= book.title %></h3>
        <p class="summary">Summary: <%= book.summary %></p>
        <p class="summary">Pages: <%= book.pages %></p>
        <p class="summary">Publisher: <%= book.publication %></p>
        <p class="summary">
          Author Name: <% book.authors.forEach((author) => { %>
            <%= author.name %>
          <% }) %>
        </p>
        <p class="summary">
          Category: <% book.categories.forEach((category) => { %>
            <%= category.name %>
          <% }) %>
        </p>
        <button class="btn-one">
          <a href="/books/<%= book.id %>/edit">edit</a>
        </button>
        <button class="btn-one btn-two">
          <a href="/books/<%= book.id %>/delete">delete</a>
        </button>
      </div>
    </section>
  </body>
</html>
